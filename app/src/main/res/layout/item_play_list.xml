<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x50"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_media_playlist_move"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:layout_marginLeft="@dimen/x10"
        android:layout_gravity="center"
        android:background="@drawable/img_media_playlist_move"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_media_play_indicator"
        android:layout_width="@dimen/x12"
        android:layout_height="@dimen/x12"
        android:layout_marginLeft="@dimen/x10"
        android:layout_gravity="center"
        android:background="@drawable/img_media_play_indicator"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/iv_media_ico"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_marginLeft="@dimen/x10"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_media_title"
        android:layout_width="@dimen/x230"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/x10"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:singleLine="true"
        android:ellipsize="middle" />

    <Button
        android:id="@+id/bt_media_time_minus"
        android:layout_width="@dimen/x30"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:background="@drawable/selector_media_duration_minus"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_media_duration"
        android:layout_width="@dimen/x100"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/x10"
        android:textAlignment="inherit"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_media_time_add"
        android:layout_width="@dimen/x30"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:background="@drawable/selector_media_duration_add"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/sp_media_scale"
        android:layout_width="@dimen/x100"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_gravity="left|center_vertical"
        android:popupBackground="@drawable/spinner_drawable"/>

    <TextView
        android:id="@+id/tv_media_state"
        android:layout_width="@dimen/x100"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/x20"
        android:textAlignment="inherit"
        android:textColor="@color/gold"
        android:textSize="13sp"
        android:textStyle="italic"
        android:singleLine="true"
        android:ellipsize="middle"
        android:text="@string/str_downloading"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/bt_media_remove"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:background="@drawable/selector_media_remove_btn" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/shape_clean_btn_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/x448"
        android:layout_height="@dimen/x90"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center"
        android:text="@string/setup_title_language"
        android:textColor="@color/white"
        android:textSize="@dimen/x64" />

    <RadioGroup
        android:id="@+id/rg_setup_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x50"
        android:layout_marginBottom="@dimen/x50"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RadioButton
            android:id="@+id/rb_setup_language_zh"
            android:layout_width="@dimen/x684"
            android:layout_height="@dimen/x110"
            android:background="@drawable/selector_button"
            android:button="@null"
            android:drawableRight="@drawable/selector_radiobutton"
            android:focusable="true"
            android:paddingLeft="40px"
            android:paddingRight="45px"
            android:text="简体中文"
            android:textColor="@color/white"
            android:textSize="@dimen/x40" />

        <RadioButton
            android:id="@+id/rb_setup_language_en"
            android:layout_width="@dimen/x684"
            android:layout_height="@dimen/x110"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/selector_button"
            android:button="@null"
            android:drawableRight="@drawable/selector_radiobutton"
            android:focusable="true"
            android:paddingLeft="40px"
            android:paddingRight="45px"
            android:text="English"
            android:textColor="@color/white"
            android:textSize="@dimen/x40" />
    </RadioGroup>
</LinearLayout>

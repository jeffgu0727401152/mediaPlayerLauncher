<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SurfaceView
                android:id="@+id/sv_media_playVideo"
                android:layout_width="@dimen/x960"
                android:layout_height="@dimen/x540" />

            <ImageView
                android:id="@+id/iv_media_playPicture"
                android:layout_width="@dimen/x960"
                android:layout_height="@dimen/x540"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_media_netView"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/img_media_net_view"/>

            <Button
                android:id="@+id/btn_media_grayView"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginLeft="@dimen/x100"
                android:background="@drawable/img_media_gray_view"/>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ll_media_playControlBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x550"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt_media_playPrevious"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/img_media_previous"/>
                <Button
                    android:id="@+id/bt_media_play"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/img_media_play"/>

                <TextView
                    android:id="@+id/tv_media_playedTime"
                    android:layout_width="@dimen/x140"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <SeekBar
                    android:id="@+id/sb_media_playProgress"
                    android:layout_width="@dimen/x400"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/tv_media_durationTime"
                    android:layout_width="@dimen/x140"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/bt_media_playNext"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:background="@drawable/img_media_next"
                    android:layout_marginLeft="@dimen/x20"/>
                <Button
                    android:id="@+id/bt_media_volume"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:background="@drawable/img_media_volume"
                    android:layout_marginLeft="@dimen/x20" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/border_red">

            <com.whiteskycn.tv.projectorlauncher.media.DragListView
                android:id="@+id/lv_media_playList"
                android:layout_width="@dimen/x640"
                android:layout_height="@dimen/x540"
                android:divider="@drawable/itme_divider"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:checkedButton="@+id/rb_media_replay_one">
                <RadioButton
                    android:id="@+id/rb_media_replay_one"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x10"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_replay_one_rb" />
                <RadioButton
                    android:id="@+id/rb_media_replay_all"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x10"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_replay_all_rb" />
                <RadioButton
                    android:id="@+id/rb_media_replay_shuffle"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x10"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/selector_replay_shuffle_rb" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_media_all_list"
            android:layout_width="@dimen/x840"
            android:layout_height="@dimen/x440"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/border_shape_with_border">
        </ListView>

    </LinearLayout>
</LinearLayout>

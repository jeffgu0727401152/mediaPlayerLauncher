<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_settings_1"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x100"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/x25"
        android:focusable="false"
        android:src="@drawable/img_logo_sm" />

    <com.whitesky.sdk.widget.TvHorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <com.whitesky.sdk.widget.TvZorderRelativeLayout
            android:id="@+id/rl_settings_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:clipToPadding="false"
            android:focusable="false"
            android:gravity="center"
            android:paddingBottom="@dimen/x80"
            android:paddingEnd="@dimen/x40"
            android:paddingStart="@dimen/x40">

            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_seo"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x275"
                android:layout_margin="@dimen/x5"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_sys_seo" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </com.whitesky.sdk.widget.RoundedFrameLayout>

            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_update"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x275"
                android:layout_below="@+id/rf_sys_seo"
                android:layout_margin="@dimen/x5"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_sys_update" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_background_color="@color/deepskyblue"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text="@string/title_default"
                    lv:lv_text_color="@color/white"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </com.whitesky.sdk.widget.RoundedFrameLayout>

            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_bg"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x275"
                android:layout_margin="@dimen/x5"
                android:layout_toEndOf="@+id/rf_sys_seo"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_bg_manager" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </com.whitesky.sdk.widget.RoundedFrameLayout>

            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_language"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x275"
                android:layout_below="@+id/rf_sys_bg"
                android:layout_margin="@dimen/x5"
                android:layout_toEndOf="@+id/rf_sys_update"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_sys_language" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </com.whitesky.sdk.widget.RoundedFrameLayout>

            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_net"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x560"
                android:layout_margin="@dimen/x5"
                android:layout_toEndOf="@+id/rf_sys_bg"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_net" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </com.whitesky.sdk.widget.RoundedFrameLayout>


            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_sound"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x275"
                android:layout_margin="@dimen/x5"
                android:layout_toEndOf="@+id/rf_sys_net"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                android:visibility="gone"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_sound" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </com.whitesky.sdk.widget.RoundedFrameLayout>

            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_display"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x275"
                android:layout_below="@+id/rf_sys_sound"
                android:layout_margin="@dimen/x5"
                android:layout_toEndOf="@+id/rf_sys_net"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                android:visibility="gone"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_display" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />


            </com.whitesky.sdk.widget.RoundedFrameLayout>

            <com.whitesky.sdk.widget.RoundedFrameLayout
                android:id="@+id/rf_sys_speed"
                android:layout_width="@dimen/x420"
                android:layout_height="@dimen/x560"
                android:layout_margin="@dimen/x5"
                android:layout_toEndOf="@+id/rf_sys_sound"
                android:background="@drawable/border_shape"
                android:focusable="true"
                android:padding="0dp"
                app:radius="@dimen/x4">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_net_speed" />


                <com.whitesky.sdk.widget.LabelView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:visibility="invisible"
                    lv:lv_fill_triangle="true"
                    lv:lv_gravity="TOP_RIGHT"
                    lv:lv_text_size="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="bottom"
                    android:background="@drawable/border_down_shape"
                    android:gravity="center"
                    android:padding="@dimen/x15"
                    android:text="@string/title_test"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:visibility="invisible" />
            </com.whitesky.sdk.widget.RoundedFrameLayout>
        </com.whitesky.sdk.widget.TvZorderRelativeLayout>

    </com.whitesky.sdk.widget.TvHorizontalScrollView>
</LinearLayout>
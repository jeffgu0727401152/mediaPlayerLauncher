<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="entrySummaries" format="reference" />

    <declare-styleable name="IjkListPreference">
        <attr name="entrySummaries" />
    </declare-styleable>
    <declare-styleable name="TextViewWithTTF">
        <attr name="ttf_name" format="string" />
    </declare-styleable>

    <!-- 倒影控件属性 -->
    <declare-styleable name="reflectItemView">
        <attr name="isReflect" format="boolean" />
        <attr name="isShape" format="boolean" />
        <attr name="reflect_height" format="dimension" />
        <attr name="allRadius" format="dimension" />
        <attr name="refle_spacing" format="dimension" />
    </declare-styleable>

    <!-- 顶层控件属性 -->
    <declare-styleable name="MainUpView">
        <attr name="isTvScreen" format="boolean" />
        <attr name="isDrawUpRect" format="boolean" />
        <attr name="upImageRes" format="reference" />
        <attr name="shadowImageRes" format="reference" />
    </declare-styleable>
    <declare-styleable name="ScrollText">
        <attr name="clickEnable" format="boolean" />
        <attr name="isHorizontal" format="boolean" />
        <attr name="speed" format="integer" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="times" format="integer" />
    </declare-styleable>
    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color"/>
        <attr name="dropDownListPaddingBottom" format="dimension"/>
        <attr name="backgroundSelector" format="integer"/>
        <attr name="textTint" format="color"/>
    </declare-styleable>

    <attr name="scale" format="integer" />
    <attr name="scaleable" format="boolean" />
    <attr name="borderDrawable" format="reference" />
    <attr name="borderSize" format="dimension" />
    <attr name="delay" format="integer" />

    <attr name="animationType">
        <enum name="DEFAULT" value="0"></enum>
        <enum name="TRANSLATE" value="1"></enum>
    </attr>

    <attr name="durationLarge" format="integer" />
    <attr name="durationSmall" format="integer" />

    <declare-styleable name="TvLinearLayout">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="borderSize" />
        <attr name="scale" />
        <attr name="delay" />
        <attr name="durationLarge" />
        <attr name="durationSmall" />
        <attr name="animationType" />
    </declare-styleable>

    <declare-styleable name="TvRelativeLayout">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="borderSize" />

    </declare-styleable>

    <declare-styleable name="TvTextView">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="number" format="integer" />
        <attr name="numberColor" format="color" />

    </declare-styleable>

    <declare-styleable name="TvHorizontalScrollView">
        <attr name="fadingEdge" format="integer" />

    </declare-styleable>

    <declare-styleable name="RoundImpl">
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="radius"  format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />

    </declare-styleable>
</resources>